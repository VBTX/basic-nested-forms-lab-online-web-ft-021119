     <%= ing.label :quantity %>
     <%= ing.text_field :quantity %><br>
  
     <%= addr.label :city %>
     <%= addr.text_field :city %><br>
  
     <%= addr.label :state %>
     <%= addr.text_field :state %><br>
  
     <%= addr.label :zipcode %>
     <%= addr.text_field :zipcode %><br>
  
